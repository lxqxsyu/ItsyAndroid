<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:gravity="center_vertical"
    android:layout_height="48dip">

    <LinearLayout
        android:id="@+id/actionbar_fragment1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="36dip"
            android:layout_height="36dip"
            android:scaleType="centerInside"
            android:src="@mipmap/ic_account_circle_white_36dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:text="这是昵称"/>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/actionbar_fragment3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:orientation="horizontal">
        <com.ogaclejapan.smarttablayout.SmartTabLayout
            android:id="@+id/rank_viewpagertab"
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            app:stl_indicatorAlwaysInCenter="false"
            app:stl_indicatorWithoutPadding="false"
            app:stl_indicatorInFront="false"
            app:stl_indicatorInterpolation="smart"
            app:stl_indicatorGravity="bottom"
            app:stl_indicatorColor="@color/colorSecondaryLight"
            app:stl_indicatorThickness="2dp"
            app:stl_indicatorWidth="40dip"
            app:stl_indicatorCornerRadius="1dp"
            app:stl_overlineColor="#4D000000"
            app:stl_overlineThickness="0dp"
            app:stl_underlineColor="@android:color/transparent"
            app:stl_underlineThickness="1dp"
            app:stl_dividerColor="@android:color/transparent"
            app:stl_dividerThickness="1dp"
            app:stl_defaultTabBackground="?attr/selectableItemBackground"
            app:stl_defaultTabTextAllCaps="false"
            app:stl_defaultTabTextColor="@android:color/white"
            app:stl_defaultTabTextSize="13sp"
            app:stl_defaultTabTextHorizontalPadding="16dp"
            app:stl_defaultTabTextMinWidth="0dp"
            app:stl_distributeEvenly="true"
            app:stl_clickable="true"
            app:stl_titleOffset="24dp"
            app:stl_drawDecorationAfterTab="false" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/actionbar_fragment4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/personal_share_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            android:background="@null"
            android:paddingRight="20dip"
            android:tint="@android:color/white"
            app:srcCompat="@drawable/ic_share_24px"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="17sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:text="个人中心"/>

        <ImageButton
            android:id="@+id/personal_setting_button"
            android:layout_width="48dip"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            android:layout_alignParentRight="true"
            android:background="@null"
            android:tint="@android:color/white"
            app:srcCompat="@drawable/ic_settings_24px"/>
    </RelativeLayout>
</RelativeLayout>